<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>ru.itis.inform.servlets.SignUpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>ru.itis.inform.servlets.SignInServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Auto</servlet-name>
        <servlet-class>ru.itis.inform.servlets.AutoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Auto</servlet-name>
        <url-pattern>/auto</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NotFound</servlet-name>
        <servlet-class>ru.itis.inform.servlets.NotFoundServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NotFound</servlet-name>
        <url-pattern>/notfound</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserExists</servlet-name>
        <servlet-class>ru.itis.inform.servlets.UserExistsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserExists</servlet-name>
        <url-pattern>/exists</url-pattern>
    </servlet-mapping>
</web-app>